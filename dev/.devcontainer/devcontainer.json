{
    "name": "Linear Regression Dev",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/app/.venv/bin/python"
            }
        }
    },
    "postCreateCommand": "uv sync",
    "remoteUser": "root",
    "workspaceFolder": "/app"
}